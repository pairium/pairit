FROM oven/bun:1 AS base
WORKDIR /app

# Build the app
FROM base AS builder
COPY package.json bun.lock ./
COPY apps/lab/server/package.json ./apps/lab/server/
COPY apps/lab/app/package.json ./apps/lab/app/
COPY apps/manager/server/package.json ./apps/manager/server/
COPY packages/auth/package.json ./packages/auth/
COPY packages/db/package.json ./packages/db/
COPY packages/html/package.json ./packages/html/
COPY packages/storage/package.json ./packages/storage/
COPY . .
RUN bun install --frozen-lockfile
# Build frontend
ARG VITE_MANAGER_URL
ENV VITE_MANAGER_URL=$VITE_MANAGER_URL
RUN bun run --filter "@pairit/lab-app" build

# Production image
FROM base AS runner
ENV NODE_ENV=production

COPY --from=builder /app/packages ./packages
COPY --from=builder /app/apps/lab/server ./apps/lab/server
COPY --from=builder /app/apps/lab/app/dist ./apps/lab/app/dist
COPY --from=builder /app/node_modules ./node_modules

WORKDIR /app/apps/lab/server
EXPOSE 3001
CMD ["bun", "run", "src/index.ts"]
