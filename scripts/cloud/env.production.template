# Production Environment Variables Template
# Copy this to .env.production and fill in the values

# GCP Project Configuration
PROJECT_ID=pairit-lab-staging

# MongoDB Atlas Connection String
MONGODB_URI=mongodb+srv://user:pass@cluster.mongodb.net/pairit

# Storage Configuration (GCS)
STORAGE_BACKEND=gcs
# STORAGE_PATH is the GCS bucket name for uploads
STORAGE_PATH=pairit-media-prod

# Google OAuth Credentials
GOOGLE_CLIENT_ID=your-client-id
GOOGLE_CLIENT_SECRET=your-client-secret

# Better Auth Secret (Generate with: openssl rand -hex 32)
AUTH_SECRET=your-random-secret-hex

# Authentication URL Configuration
# Must match the Cloud Run Service URL

# Manager Service
AUTH_BASE_URL=https://[MANAGER_SERVICE_URL]/api/auth
AUTH_TRUSTED_ORIGINS=https://[MANAGER_SERVICE_URL]

# Lab Service
AUTH_BASE_URL_LAB=https://[LAB_SERVICE_URL]/api/auth
AUTH_TRUSTED_ORIGINS_LAB=https://[LAB_SERVICE_URL]

# CLI & Script Configuration
PAIRIT_API_URL=https://[MANAGER_SERVICE_URL]
PAIRIT_FUNCTIONS_BASE_URL=https://[MANAGER_SERVICE_URL]
